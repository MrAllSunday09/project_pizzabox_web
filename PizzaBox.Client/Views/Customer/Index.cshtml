@model PizzaBox.Client.Models.CustomerViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@* TAG HELPER WAY *@
<form asp-controller="Customer" method="post">
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Customer</legend>
        @Html.ValidationMessageFor(m => m.SelectedName)
        @foreach (var item in Model.SelectedName)
        {
            <div class="form-check">
                <input class="form-check-input" type="text" asp-for="@Model.SelectedName" value="SelectedName">
                <label class="form-check-label" for="@item">@item</label>
            </div>
        }
    </fieldset>
</form>